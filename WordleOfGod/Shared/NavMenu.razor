<div class="grid">
    <nav class="bg-slate-200 rounded-b-lg lg:w-6/12 h-12 place-self-center flex z-50">
        <NavLink class="h-full mx-3 flex" href="">
            <img src="icon-192.png" alt="Logo Wordle of God">
        </NavLink>
        <div class="flex flex-grow h-full">
            <a class="text-center font-bold text-3xl xs:text-4xl w-full" href="">Word<span class="text-green-600">le</span> of God</a>
        </div>
        <button title="Navigation menu" class="sm:hidden mx-3" @onclick="ToggleNavMenu">
            @if (_collapseNavMenu)
            {
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path></svg>
            }
            else
            {
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
            }
        </button>
        <div class="hidden sm:flex flex-row-reverse align-middle">
            <NavLink class="h-full mx-1 text-2xl" href="settings">
                <i class="twa twa-gear h-full" /><span class="sm:hidden"> Paramètres</span>
            </NavLink>
            <NavLink class="h-full text-2xl hidden" href="stats">
                <i class="twa twa-bar-chart h-full" /><span class="sm:hidden"> Stats</span>
            </NavLink>
            <NavLink class="h-full ml-1 text-2xl" href="help">
                <i class="twa twa-red-question-mark h-full" /><span class="sm:hidden"> Aide</span>
            </NavLink>
        </div>
    </nav>
    <div id="menu" class="@CollapsedNavMenu sm:hidden z-0 grid grid-rows-2 w-6/12 place-self-center flex bg-slate-500 rounded" @onclick="ToggleNavMenu">
        <NavLink class="col-end-2 h-full text-2xl mr-3" href="help">
            <p class="sm:hidden text-right"><span>Aide</span>
                <i class="twa twa-red-question-mark" />
            </p>
        </NavLink>
        <NavLink class="col-end-2 h-full text-2xl mr-3 hidden" href="stats">
            <p class="sm:hidden text-right">Stats
                <i class="twa twa-bar-chart" />
            </p>
        </NavLink>
        <NavLink class="col-end-2 h-full text-2xl mr-3" href="settings">
            <p class="sm:hidden text-right">Paramètres
                <i class="twa twa-gear" />
            </p>
        </NavLink>
    </div>
</div>

@code {
    private bool _collapseNavMenu = true;

    private string? CollapsedNavMenu => _collapseNavMenu ? "hidden" : null;

    private async Task ToggleNavMenu()
    {
        _collapseNavMenu = !_collapseNavMenu;
        if (!_collapseNavMenu)
        {
            await Js.OpenMenu();
        }
    }
}